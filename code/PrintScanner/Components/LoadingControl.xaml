<UserControl x:Class="CamScan.Components.LoadingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CamScan.Components"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="250">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1"
                CornerRadius="5" Padding="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
                <Image Source="/Images/Landing/Logo MIB.png" Width="230" Margin="5,10,5,10"/>
                <TextBlock Text="Carregando, aguarde..." Margin="2,10,2,10" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="180" Height="20" Margin="10" />

            </StackPanel>
            
        </Border>
            
    </Grid>
</UserControl>
