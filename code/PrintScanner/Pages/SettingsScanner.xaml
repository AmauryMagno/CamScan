<Page x:Class="PrintScanner.Pages.SettingsScanner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PrintScanner.Pages"
      xmlns:r="clr-namespace:PrintScanner.Router"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsScanner">

    <Grid Background="White">
        <Border
        CornerRadius="20"
        BorderThickness="0"
        Background="OrangeRed" 
        Margin="80,0,80,5">
            <Grid x:Name="SetSelect">
                <Grid.RowDefinitions>

                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <r:FolderSearch x:Name="DriverScanner" Grid.Row="0" Title="Driver Scanner:" Text="" Width="400" MouseDown="DriverScanner_MouseDown"/>
                <r:FolderSearch x:Name="FolderDocClientes" Grid.Row="1" Title="Documento de Cliente: " Text="" Width="500" MouseDown="FolderDocClientes_MouseDown" />
                <r:FolderSearch x:Name="ConfissaoDivida" Grid.Row="2" Title="Confissão de Divida: " Text="" Width="500" MouseDown="ConfissaoDivida_MouseDown"/>
                <r:FolderSearch x:Name="Despesas" Grid.Row="3" Title="Despesas: " Text="" Width="500" MouseDown="Despesas_MouseDown"/>
                <r:FolderSearch x:Name="Outros" Grid.Row="4" Title="Outros: " Text="" Width="500" MouseDown="Outros_MouseDown"/>
            </Grid>
        </Border>
    </Grid>
</Page>
